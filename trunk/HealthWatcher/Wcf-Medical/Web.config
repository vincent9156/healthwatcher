<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <system.web>
    <compilation debug="true" targetFramework="4.0" />
  </system.web>
  <appSettings>
    <add key="type" value="student"/>
    <add key="timeHeart" value="100"/>
    <add key="timeTemp" value="1000"/>
  </appSettings>
  
  <system.serviceModel>
    
    <behaviors>
      <serviceBehaviors>
        <behavior name="metadataBehavior">
          <!-- Pour éviter la divulgation des informations sur les métadonnées, définissez la valeur ci-dessous sur false et supprimez le point de terminaison des métadonnées ci-dessus avant le déploiement. -->
          <serviceMetadata httpGetEnabled="true" />
          <!-- Pour recevoir les détails d'exception des erreurs à des fins de débogage, définissez la valeur ci-dessous sur true. Définissez-la sur false avant le déploiement pour éviter la divulgation des informations d'exception. -->
          <serviceDebug includeExceptionDetailInFaults="false"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    
    <serviceHostingEnvironment multipleSiteBindingsEnabled="false" />
    
    <services>
      <service  name="Wcf_Medical.ServiceLive" behaviorConfiguration="metadataBehavior">
        <endpoint address="" binding="wsDualHttpBinding" contract="Wcf_Medical.IServiceLive"/>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
      </service>
      <service name ="Wcf_Medical.ServiceUser" behaviorConfiguration="metadataBehavior">
        <endpoint address="" binding="wsHttpBinding" contract="Wcf_Medical.IServiceUser"/>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
      </service>
      <service name ="Wcf_Medical.ServicePatient" behaviorConfiguration="metadataBehavior">
        <endpoint address="" binding="wsHttpBinding" contract="Wcf_Medical.IServicePatient"/>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
      </service>
      <service name ="Wcf_Medical.ServiceObservation" behaviorConfiguration="metadataBehavior">
        <endpoint address="" binding="wsHttpBinding" contract="Wcf_Medical.IServiceObservation"/>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
      </service>
    </services>
    
  </system.serviceModel>
  
 <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
  </system.webServer>
</configuration>

